{% extends 'base.html.twig' %}

{% block title %}Hello ShowMatiereController!{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <div class="text-center py-6">
            <h1 class="text-4xl font-semibold text-gray-800">{{ name }}</h1>
            <p class="text-md text-gray-600">{{ teacherName }}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for lesson in lessons %}
                <div class="card bg-gray-50 hover:shadow-lg rounded" onclick="location.href='/show/lesson/{{ lesson.id }}';" style="cursor: pointer;">
                    <div class="m-4">
                        <h2 class="text-xl font-bold text-gray-800">{{ lesson.title }}</h2>
                        <p class="text-gray-600">{{ lesson.description | default('Pas de description.') }}</p>
                        <p class="text-gray-500">Goal: {{ lesson.goal | default('Pas d\'objectif renseign√©e.') }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
