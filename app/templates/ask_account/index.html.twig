{% extends 'base.html.twig' %}

{% block title %}Demande de compte formateur{% endblock %}

{% block body %}
    <div class="bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Demande de compte formateur</h2>
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="mt-5 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">{{ flash_error }}</div>
            {% endfor %}
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                {{ form_start(askAccountForm, {'attr': {'class': 'space-y-6'}}) }}

                <div>
                    {{ form_label(askAccountForm.email, 'Email', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(askAccountForm.email, {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md p-2'}}) }}
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Demandez mon compte</button>
                </div>
                {{ form_end(askAccountForm) }}
            </div>
        </div>
    </div>
{% endblock %}
